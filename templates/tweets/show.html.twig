{% extends 'base.html.twig' %}

{% block title %}Tweets{% endblock %}

{% block body %}
    <h1>Tweets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tweet.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ tweet.contenu }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ tweet.userId.username}}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(tweet, 'imageFile') }}" alt="Image de la pierre" style="width:400px; height:300px;"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tweets_index') }}">back to list</a>

    <a href="{{ path('app_tweets_edit', {'id': tweet.id}) }}">edit</a>

    {{ include('tweets/_delete_form.html.twig') }}
{% endblock %}
