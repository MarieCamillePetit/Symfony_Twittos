{% extends 'base.html.twig' %}
{% block title %}Twittosphère{% endblock %}


{% block body %}
    <body>
        <div class="home_container">
            <div class="home_left">
                <h4>Réseaux sociaux</h4>
                <h1>Bienvenue sur la Twittosphère</h1>
                <p>La Twittosphère est un réseau social de microblogage géré par l'entreprise Twittosphère Inc. </p>
            </div>
                <img src="{{ asset('assets/img/back_index.png') }}" alt="" class="display_none">
        </div>
        <div class="btn_home_div">
            <a href="{{ path('app_tweets_index') }}" class="btn"> Voir les Twittos</a>
        </div>
        <div class="quote_container">
            <div id="card1" class="quote-card">
                <p id="quote"> "{{ quote.quote }}"</p>
                <p id="author">- {{ quote.character }} | <span class="anime">{{ quote.anime }}</span>
                </p>
            </div>
        </div>
    </body>
{% endblock %}

